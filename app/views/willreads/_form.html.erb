 <div class="uk-container uk-container-center">
   <div class="uk-grid-width-expand">
     <%= form_with(model: willread, local:true) do |f| %>

       <div class="form-group">
         <%= f.label :name, "タグをつける。複数タグをつけるには','で区切ってください" %>
         <%= f.text_field :name, class: 'form-control', id:'tag_id' %>
       </div>
       <div class="form-group">
         <%= f.label :title, '本のタイトル' %>
         <%= f.text_field :title, class: 'form-control' %>
       </div>

       <div class="form-group">
         <%= f.label :details, '読みたい本の詳細' %>
         <%= f.text_area :details, class: 'form-control' %>
       </div>

       <div class="form-group">
         <%= f.label :image, '読みたい本の画像' %>
         <%= f.file_field :image, class: 'form-control' %>
       </div>

       <%= f.submit '読みたい本の登録', class: 'btn btn-primary btn-block' %>
     <% end %>
   </div>
 </div>