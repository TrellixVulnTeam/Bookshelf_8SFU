  <div class="uk-container uk-container-center">
    <div class="uk-grid-width-expand">
      <%= form_with(model: read, local: true) do |f| %>
       <%= render 'layouts/error_messages', model: f.object %>
        
        <div class="form-group">
          <%= f.label :name, "タグをつける。複数タグをつけるには','で区切ってください" %>
          <%= f.text_field :name, class: "form-control", id:'tag_ids' %>
        </div>  
       
        <div class="form-group">
          <%= f.label :title, '本のタイトル' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :details, '読んだ本の詳細' %>
          <%= f.text_area :details, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :image, '本の画像' %>
          <%= f.file_field :image, class: 'form-control' %>
        </div>

        <%= f.submit '読んだ本を登録', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>